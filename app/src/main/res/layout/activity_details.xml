<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <TextView
        android:id="@+id/name"
        android:layout_width="208dp"
        android:layout_height="0dp"
        android:layout_marginTop="116dp"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/mobile_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mobile_number"
        android:layout_width="214dp"
        android:layout_height="0dp"
        android:layout_marginBottom="42dp"
        app:layout_constraintBottom_toTopOf="@+id/unique_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <Button
        android:id="@+id/entry"
        android:layout_width="102dp"
        android:layout_height="42dp"
        android:layout_marginStart="84dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="287dp"
        android:background="@color/colorPrimary"
        android:onClick="onClickEntry"
        android:text="Mark Entry"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mark_exit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/unique_number"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/mark_exit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="284dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="onClickExit"
        android:text="MARK EXIT"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/entry"
        app:layout_constraintTop_toBottomOf="@+id/unique_number" />

    <TextView
        android:id="@+id/unique_number"
        android:layout_width="210dp"
        android:layout_height="0dp"
        android:layout_marginTop="262dp"
        android:layout_marginBottom="101dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/mark_exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>